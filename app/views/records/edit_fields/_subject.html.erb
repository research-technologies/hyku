<% template = f.object.model.class.to_s.underscore %>
<% subject_service = SubjectService.new %>

<br>
<label class="control-label multi_value optional" for="#{template}_subject">Subject</label>
<p class="help-block">Select word(s) about your work.</p>
<%= select_tag "#{template}[subject]",
      options_from_collection_for_select(subject_service.select_active_options.flatten.uniq!, :to_s, :to_s, f.object.model.subject),
        class: "form-control ubiquity-subject", include_blank: true
%>
