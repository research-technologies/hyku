<% tenant_work_settings =  get_tenant_work_settings  %>
<% label_name = tenant_work_settings.presence && tenant_work_settings['metadata_labels']["org_unit"].presence || "organisational unit".capitalize  %>

<% my_model_name = f.object.model.class.to_s.underscore %>

<label class="control-label multi_value optional" for="#{template}_org_unit">
  <%= label_name %>
  <span class="label label-info required-tag">required</span>
</label>
<p class="help-block">Enter your department, center, or group at Pacific.</p>

<%= text_field_tag "#{my_model_name}[org_unit][]", f.object.model.org_unit.first, id: "#{my_model_name}_org_unit",
  class: "form-control text required form-control ubiquity-org-unit" , required: "required" %>
<br>
