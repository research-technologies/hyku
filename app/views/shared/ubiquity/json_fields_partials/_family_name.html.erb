<% label_name = check_for_nested_value_in_tenant_settings('metadata_labels', 'family_name') || "#{metadata_field.capitalize} family name"  %>


<label class="control-label multi_value optional" for="#{template}_#{metadata_field}_family_name">
  <%= label_name %> </label>

<%= text_field_tag "#{template}[#{metadata_field}_group][][#{metadata_field}_family_name]", hash.dig("#{metadata_field}_family_name"),
                  class: "#{template}_#{metadata_field}_group form-control  multi-text-field  multi_value ubiquity_#{metadata_field}_family_name",
                  placeholder: "Please enter the #{metadata_field}\'s last name/family name.",
                  name: "#{template}[#{metadata_field}_group][][#{metadata_field}_family_name]",
                  data: {field_name:"ubiquity_#{metadata_field}_family_name"}

%>
<% if metadata_field == 'creator' %>
  <span style="color:red;" class="error">Please enter one of these fields.</span>
<% end %>
